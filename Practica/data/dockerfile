# Usar la imagen base de Postgres 13 en Alpine
FROM postgres:13-alpine

WORKDIR /data

# Variables de entorno para la base de datos
ENV POSTGRES_PASSWORD=qwerty
ENV POSTGRES_USER=superadmin

